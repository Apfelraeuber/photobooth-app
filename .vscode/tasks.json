{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pydeps",
      "type": "shell",
      "command": "pydeps photobooth"
    },
    {
      "label": "pydeps internal only",
      "type": "shell",
      "command": "pydeps photobooth --max-bacon=1"
    },
    {
      "label": "pytest with coverage",
      "type": "shell",
      "command": "pytest -v --cov-report=term --cov-report=xml:coverage.xml --cov-report=html:coverage_html --cov ./"
    },
    {
      "label": "pylint",
      "type": "shell",
      "command": "pylint -v *.py ./photobooth/*.py"
    },
    {
      "label": "ruff with --fix",
      "type": "shell",
      "command": "ruff check . --fix"
    },
    {
      "label": "statemachine diagram (needs pydot and graphviz)",
      "type": "shell",
      "command": "python -m statemachine.contrib.diagram photobooth.services.processing.ProcessingPicture diagram_ProcessingPicture.png"
    },
    {
      "label": "list outdated pip packages",
      "type": "shell",
      "command": "pip list --outdated"
    },
    {
      "label": "gather requirements.txt pip packages",
      "type": "shell",
      "command": "pipreqs.exe --ignore experiments --encoding utf8 --force"
    }
  ]
}
